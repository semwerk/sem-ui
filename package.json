{
  "name": "werk-ui",
  "version": "0.0.0",
  "private": true,
  "description": "React component library for Werkcontext and WerkPress",
  "repository": {
    "type": "git",
    "url": "https://github.com/GanzeKarte/werk-ui.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "pnpm --recursive --stream run build",
    "dev": "pnpm --recursive --parallel run dev",
    "test": "pnpm --recursive --stream run test",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings 0",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,css}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,css}\"",
    "typecheck": "pnpm --recursive --stream run typecheck",
    "clean": "pnpm --recursive run clean && rm -rf node_modules",
    "storybook": "pnpm --filter storybook storybook",
    "build-storybook": "pnpm --filter storybook build-storybook",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  }
}
